<div class="page-header">
  <h1 class="page-title">Judge Project</h1>
</div>
<% if @judgement.score != -1 %>
    <div class="card">
    <div class="card-body">
      <div class="col-lg-8">
        <p class="h3">Project Score: <%= @judgement.score %></p>
        <hr>
        <p class="lead">Project has already been judged. If you would like to re-judge it, an administrator must remove the existing score.</p>
        <div class="text-left">
            <%= link_to "Back", judging_index_path, class: "btn btn-secondary ml-3 mb-3" %>
        </div>
      </div>
    </div>
    </div>
<% else %>
    <%= render 'judge_form', judgement: @judgement %>
<% end %>